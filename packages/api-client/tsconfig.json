{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "paths": {
      "@/api/*": ["../../apps/api/src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/packages/web"]
  },
  "include": ["src"]
}
